#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run linting and typecheck
pnpm lint && pnpm typecheck

# Check for Mapbox filter regressions (expression-style filters)
echo "ðŸ” Checking for expression-style Mapbox filters..."
if grep -r --include="*.ts" --include="*.tsx" "\['(==|!=|>|>=|<|<=|in|!in|has|!has)'\s*,\s*\['get'," src/; then
  echo "âŒ Found expression-style property in Mapbox filter"
  echo "ðŸ’¡ Use literal property keys instead: ['==', 'propertyName', value]"
  exit 1
fi

echo "âœ… Mapbox filter check passed"