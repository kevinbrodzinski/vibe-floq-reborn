{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "dom", "dom.iterable", "es2022"],
    "strict": false,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "exclude": [
      "node_modules/",
      "dist/",
      "build/",
      ".next/",
      "coverage/",
      "src/"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "exclude": [
      "node_modules/",
      "dist/",
      "build/",
      ".next/",
      "coverage/",
      "src/"
    ]
  },
  "tasks": {
    "functions:check": "deno check supabase/functions/**/*.ts",
    "functions:lint": "deno lint supabase/functions/",
    "functions:fmt": "deno fmt supabase/functions/"
  },
  "imports": {
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2.39.3",
    "h3-js": "https://esm.sh/h3-js@4.2.1"
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "build/",
    ".next/",
    "coverage/",
    "src/"
  ]
}