{
  "compilerOptions": {
    /* Targets & libs */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* Modules & resolution */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,           // better with "bundler" in TS â‰¥5
    "customConditions": ["react-native"],   // prefer RN export conditions when present

    /* JSX / React */
    "jsx": "react-jsx",                     // React 18 JSX transform (works for web & RN)
    "types": ["node", "react", "react-dom", "react-native"],

    /* Interop & convenience */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Strictness (tune upward later) */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/integrations/*": ["./src/integrations/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.ts", "src/**/*.tsx", "src/**/*.json"],
  "exclude": ["node_modules", "dist", "build"]
}
